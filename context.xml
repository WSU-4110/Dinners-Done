<?xml version="1.0" encoding="UTF-8"?>


  <Context>



 <Resource name="jdbc/DinnersDone"       
               auth="Container"
               type="javax.sql.DataSource"/>

  <ResourceParams name="jdbc:mysql://localhost:3306/DinnersDone">
    <parameter>
      <name>factory</name>
      <value>org.apache.commons.dbcp.BasicDataSourceFactory</value>
    </parameter>

    <parameter>
      <name>maxActive</name>
      <value>100</value>
    </parameter>

    <parameter>
      <name>maxIdle</name>
      <value>20</value>
    </parameter>

    <parameter>
      <name>validationQuery</name>
      <value>SELECT 1</value>
    </parameter>

    <parameter>
      <name>testOnBorrow</name>
      <value>true</value>
    </parameter>

    <parameter>
      <name>testWhileIdle</name>
      <value>true</value>
    </parameter>

                         //below sets time for waiting and checking for idle connections
    <parameter>
      <name>timeBetweenEvictionRunsMillis</name>
      <value>10000</value>
    </parameter>

    <parameter>
      <name>minEvictableIdleTimeMillis</name>
      <value>60000</value>
    </parameter>
                          //userName is parameter used here
    <parameter>
     <name>username</name>
     <value>userName</value>
    </parameter>
                           //userPass is parameter used here
    <parameter>
     <name>password</name>
     <value>userPass</value>
    </parameter>

    <parameter>
       <name>driverClassName</name>
       <value>com.mysql.jdbc.Driver</value>
    </parameter>
                  
    <parameter>
      <name>url</name>
      <value>jdbc:mysql://localhost:3306/DinnersDone</value>  
    </parameter>

  </ResourceParams>
</Context>
